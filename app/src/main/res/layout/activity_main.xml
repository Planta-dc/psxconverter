<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E">

    <!-- 1. THE TOOLBAR (Title + 3 Dots Menu) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#252525"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="PSX VCD Converter"
        app:titleTextColor="#FFFFFF"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />

    <!-- 2. FOLDER SELECTION ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#121212"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/folder_path_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No Folder Selected"
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="middle"/>

        <Button
            android:id="@+id/change_folder_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Change"
            android:textSize="12sp"
            android:backgroundTint="#003DA5"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- 3. PROGRESS BAR (Hidden by default) -->
    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:background="#333333">

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Processing..."
            android:textColor="#FFFFFF"
            android:gravity="center"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#003DA5"/>
    </LinearLayout>

    <!-- 4. LIST HEADER ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Games Found"
            android:textColor="#AAAAAA"
            android:textStyle="bold"/>

        <!-- Small Refresh Button -->
        <Button
            android:id="@+id/refresh_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="â†»"
            android:textSize="20sp"
            android:padding="0dp"
            android:minWidth="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:gravity="center"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <!-- Convert All Button -->
        <Button
            android:id="@+id/convert_all_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Convert All"
            android:textSize="12sp"
            android:backgroundTint="#007700"
            android:textColor="#FFFFFF"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- 5. GAME LIST CONTAINER -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/games_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"/>
    </ScrollView>

</LinearLayout>