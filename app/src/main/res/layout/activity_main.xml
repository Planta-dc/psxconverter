<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#252525">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#000000"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/folder_path_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No Folder Selected"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="middle"/>

        <Button
            android:id="@+id/change_folder_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Change"
            android:textSize="12sp"
            android:backgroundTint="#003DA5"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Status & Progress -->
    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:background="#333333">

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Processing..."
            android:textColor="#FFFFFF"
            android:gravity="center"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#003DA5"/>
    </LinearLayout>

    <!-- Header Area with Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Games Found"
            android:textColor="#CCCCCC"
            android:textStyle="bold"/>

        <!-- REFRESH BUTTON -->
        <Button
            android:id="@+id/refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="â†»"
            android:textSize="18sp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <!-- CONVERT ALL BUTTON -->
        <Button
            android:id="@+id/convert_all_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Convert All"
            android:textSize="12sp"
            android:backgroundTint="#007700"
            android:textColor="#FFFFFF"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Scrollable List of Games -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/games_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"/>
    </ScrollView>

</LinearLayout>