<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Crucial part: The parent MUST be .NoActionBar -->
    <style name="Theme.PSXVCDConverter" parent="Theme.AppCompat.Light.NoActionBar">
        
        <!-- Colors -->
        <item name="colorPrimary">#252525</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#003DA5</item>
        
        <!-- Text Colors -->
        <item name="android:textColor">#FFFFFF</item>
        
        <!-- Remove the default window background so our layout controls it -->
        <item name="android:windowBackground">#1E1E1E</item>
    </style>
</resources>