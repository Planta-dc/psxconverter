<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- PARENT THEME: Must be 'NoActionBar' to use your own Toolbar -->
    <style name="Theme.PSXVCDConverter" parent="Theme.AppCompat.NoActionBar">
        
        <!-- BRAND COLORS (PSX Dark Aesthetic) -->
        <item name="colorPrimary">#252525</item>       <!-- Dark Grey -->
        <item name="colorPrimaryDark">#000000</item>   <!-- Black Status Bar -->
        <item name="colorAccent">#003DA5</item>        <!-- Sony Blue -->
        
        <!-- TEXT COLORS -->
        <!-- Forces all standard text to be White -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#CCCCCC</item> <!-- Light Grey for subtitles -->
        
        <!-- BACKGROUND -->
        <item name="android:windowBackground">#1E1E1E</item>
        
        <!-- DIALOGS & POPUPS -->
        <!-- Forces the "Convert All" and "About" boxes to be Dark Grey -->
        <item name="android:dialogTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:alertDialogTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        
        <!-- MENU -->
        <!-- Forces the 3-dot menu background to be Dark -->
        <item name="actionOverflowMenuStyle">@style/DarkOverflowMenu</item>
    </style>

    <!-- Helper style for the 3-dot menu dropdown -->
    <style name="DarkOverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">#252525</item>
    </style>
</resources>
